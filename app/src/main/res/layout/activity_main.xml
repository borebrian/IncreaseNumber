<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content" android:id="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            app:cardCornerRadius="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:textAlignment="center"
                    android:background="@drawable/main"


            >
                <TextView
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:id="@+id/textView"
                        android:textSize="100sp"

                        tools:layout_editor_absoluteY="200dp" tools:layout_editor_absoluteX="104dp"
                        android:layout_marginTop="49dp">

                </TextView>


            </RelativeLayout>
            <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <android.support.v7.widget.AppCompatTextView
                        android:textSize="20dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="Increase by 1"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:id="@+id/increase" android:alpha="1" tools:focusable="auto"
                        android:typeface="sans"
                        tools:layout_editor_absoluteY="312dp" tools:layout_editor_absoluteX="150dp"
                />
                <android.support.v7.widget.AppCompatTextView

                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="Decrease by 1"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:id="@+id/decrease" android:alpha="1" tools:focusable="auto"
                        android:typeface="sans"
                        tools:layout_editor_absoluteY="312dp" tools:layout_editor_absoluteX="150dp"
                />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


    <Button
                android:text="Exit App"
                android:fontFamily="sans-serif-condensed-light"
                app:layout_constraintCircleRadius="20dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/exit" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintHorizontal_bias="0.498"/>




</android.support.constraint.ConstraintLayout>